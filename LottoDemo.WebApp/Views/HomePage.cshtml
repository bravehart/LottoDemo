                                <!-- ngIf: (images.length-1) === $index --><div data-ng-if="(images.length-1) === $index" class="ng-scope">
                                    <div class="jackpot-carousel">
                                        <div class="jackpot-lottery-name ng-binding">
                                            Powerball
                                        </div>
                                        <div class="jackpot-amount">
                                            <strong data-ng-bind-html="jackpot_details.currency_symbol" class="ng-binding">US</strong> <span data-ng-bind-html="jackpot_details.jackpot_amount" class="ng-binding">$285,000,000</span>
                                        </div>
                                        <div class="jackpot-payout">
