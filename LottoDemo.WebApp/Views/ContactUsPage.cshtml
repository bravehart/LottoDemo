@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ContactUsPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;

@{
    Layout = "WithRightSidebar.cshtml";
}

<div class="row">
    <div class="twoColWrapper col-lg-12">

        <div class="pageHeader ">
            <h1>Contact Us</h1>
        </div>

        <div class="pageContent">
            <div class="basket-entry-head">
                <img onclick="return callme();" style="cursor:pointer;" align="left" src="~/images/call_me_back.svg" alt="Call_me_back">
                <div id="send-call-me-back" class="col-sm-9">
                    <br />
                    <b>Would you like us to call you back via telephone?</b>
                </div>
            </div>

            <div style="text-align: center;" class="col-lg-12">
                <div class="row spacing-fix">
                    <div class="row">

                        <div class="col-md-4 col-sm-4">
                            <div style="background-color: #EFEFEF; margin-left: 10px">
                                <a id="aLiveSupport">
                                    <div style="height: 200px; width: 100%; padding-top: 20px;">
                                        <img class="imgLiveSupport contact-images" src="~/images/live-support-offline-chat.svg" border="0" alt="Click for Live Support!" style="width: 180px;">
                                    </div>
                                </a>
                                <div style="height: 175px;">
                                    <div class="basket-entry-head">
                                        <h2 style="margin: 0px;padding: 0px; text-transform: uppercase;font-size: 20px;font-weight: bold; margin-bottom: 20px">Live Support is <span id="status-colour" style="color: red;">Offline</span></h2>
                                        <p style="font-size: 18px">Click here for live Support</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-4">
                            <div style="background-color: #EFEFEF; margin-right: 10px">
                                <a href="/faq/">
                                    <div style="height: 200px; width: 100%; padding-top: 30px;">
                                        <img class="contact-images" src="~/images/faq.svg" border="0" alt="Knowledge_base" style="width: 180px;">
                                    </div>
                                </a>
                                <div style="height: 175px;">
                                    <div class="basket-entry-head">
                                        <h2 style="margin: 0px;padding: 0px; text-transform: uppercase;font-size: 20px;font-weight: bold; margin-bottom: 20px">Frequently Asked Questions</h2>
                                        <p style="font-size: 18px">Consult our FAQ page to find answers to common questions</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-4">
                            <div style="background-color: #EFEFEF; margin-right: 10px">
                                <a href="/contact-us/">
                                    <div style="height: 200px; width: 100%; padding-top: 30px;">
                                        <img class="contact-images" src="~/images/customer-support.svg" border="0" alt="Support_ticket" style="width: 180px;">
                                    </div>
                                </a>
                                <div style="height: 175px;">
                                    <div class="basket-entry-head">
                                        <h2 style="margin: 0px;padding: 0px; text-transform: uppercase;font-size: 20px;font-weight: bold; margin-bottom: 20px">Customer Support</h2>
                                        <p style="font-size: 18px">Click here for customer support options</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <br /><br />

                <div class="row">
                    <div class="basket-entry-head">
                        <strong>International Contact Numbers </strong>
                        <br /> <i>Please state your name and email address when calling, in order for us to better assist you with your query.</i>
                    </div>
                </div>

                <div class="row spacing-fix">
                    <div class="col-lg-4 col-sm-6 number-main-wrap">
                        <div class="number-content row">
                            <h5><img src="~/images/en.svg" border="0" width="30"> English</h5>
                            Tel. +44 8704 601788<br>Fax. +44 8704 580264
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 number-main-wrap">
