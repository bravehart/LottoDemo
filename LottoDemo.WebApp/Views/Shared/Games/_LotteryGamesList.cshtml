@using ContentModels = Umbraco.Web.PublishedContentModels;

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.LotteriesListPage>

<div class="col-lg-12 ">
    <div>
        <div class="basket-entry-head-sml">
            <h1>@Umbraco.GetDictionaryValue("lotteryGamesListTitle")</h1>
        </div>

        <div class="col-lg-12">
            <div class="row">
                <!--        <h4>--><!--</h4>-->
                <div class="row">
                    <div class="en nextdraw">
                        <div class="lottoryblocks-wrapper">

                            @foreach (ContentModels.LotteryGame lotteryGame in Model.Content.Children)
                            {
                                <div class="col-lg-3 col-sm-4 col-md-3 col-xs-6 lottery-fullbox">
                                    <div class="pb-holder">

                                        <div class="pb-logo">
                                            <a href="@lotteryGame.Url" title="@lotteryGame.LotteryPageTitle">
                                                <span class="pending">
                                                    <img src="@Umbraco.Media(lotteryGame.LotteryLogo).umbracoFile.src" alt="Lottery Logo" 
                                                         class="lottery-logo-img" style="width: 150px;" />
                                                </span>
                                            </a>
                                            <h2 class="lottos">
                                                @lotteryGame.LotteryName
                                            </h2>
                                        </div>

                                        <div class="pb-amount">
                                            @ViewBag.LastestJackpot
                                            <span class="jackpotamounts_small">
                                            </span>
                                        </div>

                                        <div class="pb-counter">
                                            <div class="counter">
                                                <div class="ng-isolate-scope">
                                                    <div class="ng-scope">
                                                        <strong>
                                                            <span class="ng-binding">@ViewBag.NextDraw</span>
                                                        </strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="pb-btn">
                                            <div>
                                                <a href="@lotteryGame.Url" title="@lotteryGame.LotteryPageTitle" class="single">
                                                    @Umbraco.GetDictionaryValue("lotteryGamesGameDetailLinkText")
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>