                            <!-- ngRepeat: img in images -->
                            <li data-target="#myCarousel" data-ng-repeat="img in images" class="{active : (img === 0)} ng-scope active" data-slide-to="0"></li><!-- end ngRepeat: img in images -->
                            <li data-target="#myCarousel" data-ng-repeat="img in images" class="{active : (img === 0)} ng-scope" data-slide-to="1"></li><!-- end ngRepeat: img in images -->
                        </ol>
                        <div class="carousel-inner">
