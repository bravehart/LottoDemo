@using ContentModels = Umbraco.Web.PublishedContentModels;

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ContentSection>

<div class="col-lg-12">
    <div class="row">
        <hr>
        <div class="card-info-wrap">
            @if (!Model.Content.AlignImageToRight)
            {
                <div class="col-md-6">
                    <img class="steps-img" src="@Umbraco.Media(Model.Content.Image).umbracoFile.src" border="0" style="border: 0px none;"
                         alt="@Model.Content.SectionTitle" title="@Model.Content.SectionTitle" />
                </div>
            }

            <div class="col-md-6">
                <h3>@Model.Content.SectionTitle</h3>
                @Model.Content.ContentText
            </div>

            @if (Model.Content.AlignImageToRight)
            {
                <div class="col-md-6">
                    <img class="steps-img" src="@Umbraco.Media(Model.Content.Image).umbracoFile.src" border="0" style="border: 0px none;"
                         alt="@Model.Content.SectionTitle" title="@Model.Content.SectionTitle" />
                </div>
            }
        </div>
    </div>
</div>