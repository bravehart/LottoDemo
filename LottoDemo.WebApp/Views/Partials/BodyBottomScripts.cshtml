<script type="text/javascript">
    //modify code below when promotion ends
    jQuery(document).ready(function () {

        try {
            // log every unique visit
            var uniqueKey = jQuery.cookie("js");

            if (uniqueKey === "undefined" || uniqueKey === undefined || uniqueKey == "") {
                uniqueKey = CryptoJS.MD5(moment().toString());

                var momentDate = moment().add('years', 1);
                var expiryDate = new Date(momentDate.year(), momentDate.month(), momentDate.day(), momentDate.hour(), momentDate.minute(), momentDate.second(), momentDate.milliseconds());


                jQuery.post("https://www.playusalotteries.com/unique/visit.html", { "unique_key": uniqueKey }, function (response) {
                    if (response.status === "success") {
                        jQuery.cookie("unique_key", uniqueKey, { expires: expiryDate, secure: false });
                    }
                }, 'json');
            }
        }
        catch (e) {
        }
    });

    /* Responsive side nav */
    jQuery(window).bind('resize', function (e) {
        window.resizeEvt;
        jQuery(window).resize(function () {
            clearTimeout(window.resizeEvt);
            window.resizeEvt = setTimeout(function () {
                var w = window,
                    d = document,
                    e = d.documentElement,
                    g = d.getElementsByTagName('body')[0],
                    x = w.innerWidth || e.clientWidth || g.clientWidth
                //console.log(x);
                jQuery.ajax({
                    method: "post",
                    url: "/en/screenwidth.html",
                    data: { x: x },
                    success: function (response) {
                        console.log(response);
                        sessionStorage.setItem("screenwidth", x);
                    }
                });

                if (x < 768) window.location.reload(); //reload for side nav
                if (x > 768) window.location.reload(); //reload for main nav

            }, 250);
        });
    });

    /* Responsive side nav */
    var snapper = new Snap({
        element: document.getElementById('content'),
        disable: 'right'
    });

    var addEvent = function addEvent(element, eventName, func) {
        if (element.addEventListener) {
            return element.addEventListener(eventName, func, false);
        }
        else if (element.attachEvent) {
            return element.attachEvent("on" + eventName, func);
        }
    };

    var myToggleButton = document.getElementById('open-left')

    myToggleButton.addEventListener('click', function () {
        if (snapper.state().state == "left") {
            snapper.close();
        }
        else {
            snapper.open('left');
        }
    });
